{
  "name": "idoni-kronos",
  "version": "1.0.0",
  "description": "IDONI Kronos: gestor de Excel y fichas t√©cnicas para escritorio que te ahorra tiempo.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "excel",
    "cocina",
    "fichas-tecnicas"
  ],
  "author": "IDONI Project",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1"
  },
  "dependencies": {
    "feather-icons": "^4.29.2",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.idoni.kronos",
    "productName": "IDONI Kronos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/idoni-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/idoni-icon-512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/idoni-icon-512.png"
    }
  }
}
